            "minimum": 0.01,
            "exclusiveMinimum": false,
            "type": "number"
          },
          "currency": {
            "type": "string"
          },
          "splits": {
            "maxItems": 2147483647,
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ExpenseSplitDto"
            }
          }
        }
      },
      "ExpenseSplitDto": {
        "required": [
