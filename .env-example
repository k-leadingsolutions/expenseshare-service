# Copy to .env (gitignored) and fill values locally:
# cp .env.example .env

# Spring profile
SPRING_PROFILES_ACTIVE=docker

# Google OAuth2 (do NOT commit real secrets)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Server / port
SERVER_PORT=8082

# Datasource (H2 quick demo â€” controlled by application-local.properties)
SPRING_DATASOURCE_URL=jdbc:h2:mem:splitwise;DB_CLOSE_DELAY=-1;MODE=PostgreSQL
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=test123

# Disable Kafka locally
SPRING_AUTOCONFIGURE_EXCLUDE=org.springframework.boot.autoconfigure.kafka.KafkaAutoConfiguration
SPRING_KAFKA_ADMIN_ENABLED=false
SPRING_KAFKA_LISTENER_AUTO_STARTUP=false

# Optional tracing / metrics endpoints for local testing
# JAEGER_ENDPOINT=http://localhost:14268/api/traces
# PROMETHEUS_SCRAPE=true